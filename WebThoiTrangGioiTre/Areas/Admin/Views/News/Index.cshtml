@model IEnumerable<MyClass.Models.News>

@{
	ViewBag.Title = "Quản lý mẫu tin";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper"  id="layoutSidenav_content">
	<!-- Main content -->
	<section class="content my-2">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-md-6">
						<strong class="text-danger">DANH SÁCH MẪU TIN</strong>
					</div>
					<div class="col-md-6 text-right">
						<a href="@Url.Action("Create","News")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Thêm mới</a>
						<!--<a href=" Url.Action("Trash","Product")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i>Thùng rác</a>-->
					</div>
				</div>
			</div>
			<div class="card-body">
				@Html.Partial("Message")
				<table class="table table-bordered table-striped myTable" id="datatablesSimple">
					<tr>
						<th class="text-center">ID</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Name)
						</th>
						
						<th class="text-center">
							Hình ảnh
						</th>
						<th class="text-center">
							Kiểu tin tức
						</th>
						
						<th class="text-center">
							Ngày tạo
						</th>
						<th class="text-center">
							Ngày cập nhật
						</th>
						<th class="text-center" style="width: 150px">Chức năng</th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							
							<td>
								<img src="~/Public/images/blog/@item.Image" alt="TenHinh" class="img-fluid" />
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TypeNews)
							</td>
							
							<td>
								@Html.DisplayFor(modelItem => item.CreatedAt)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.UpdatedAt)
							</td>
							<td>
								<a href="@Url.Action("Details","News", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
								<a href="@Url.Action("Edit","News", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
								<a href="@Url.Action("Delete","News", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
							</td>
						</tr>
					}
				</table>
			</div>
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
