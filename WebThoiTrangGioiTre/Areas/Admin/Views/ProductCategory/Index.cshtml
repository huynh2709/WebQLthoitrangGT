@model IEnumerable<MyClass.Models.ProductCategory>

@{
	ViewBag.Title = "Quản lý DM sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" id="layoutSidenav_content">
	<!-- Main content -->
	<section class="content my-2">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-md-6">
						<strong class="text-danger">QUẢN LÝ DANH MỤC SẢN PHẨM</strong>
					</div>
					<div class="col-md-6 text-right">
						<a href="@Url.Action("Create","ProductCategory")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Thêm mới</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<table class="table table-bordered table-striped" id="datatablesSimple">
					<tr>
						<th>ID</th>
						<th>
							@Html.DisplayNameFor(model => model.Name)
						</th>
						<th>
							Ngày tạo
						</th>
						<th>
							Ngày cập nhật
						</th>
						<th>Chức năng</th>

					</tr>

					@foreach (var item in Model)
					{
				<tr>
					<td>@item.Id</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatedAt)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UpdatedAt)
					</td>

					<td>
						<a href="@Url.Action("Details","ProductCategory", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
						<a href="@Url.Action("Edit","ProductCategory", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
						<a href="@Url.Action("Delete","ProductCategory", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
					</td>
				</tr>
					}

				</table>
			</div>
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->