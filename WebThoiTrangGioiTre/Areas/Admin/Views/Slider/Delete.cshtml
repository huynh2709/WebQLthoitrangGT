@model MyClass.Models.Slider

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
	<section class="content my-2">
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-md-6">
						<strong class="text-danger">CHI TIẾT SLIDER SẼ XÓA</strong>
					</div>
					<div class="col-md-6 text-right">
						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							<div class="form-actions no-color">
								<button class="btn btn-sm btn-outline-warning" type="submit" name="delete"><i class="fas fa-trash"></i>Xóa</button>
								<a href="@Url.Action("Index","Slider")" class="btn btn-sm btn-outline-info"><i class="fas fa-long-arrow-alt-left"></i>  Về danh sách</a>
							</div>
						}
					</div>
				</div>
			</div>
			<div class="card-body ">
				<table class="table table-bordered">
					<tr>
						<th style="width:180px" class="bg-dark"><p>Tên trường</p></th>
						<th class="bg-dark">Nội dung</th>
					</tr>
					<tr>
						<td>@Html.DisplayNameFor(model => model.Name)</td>
						<td> @Html.DisplayFor(model => model.Name) </td>
					</tr>
					<tr>
						<td>@Html.DisplayNameFor(model => model.Image) </td>
						<td> @Html.DisplayFor(model => model.Image)</td>
					</tr>
					<tr>
						<td class="bg-light">@Html.DisplayNameFor(model => model.Url)</td>
						<td class="bg-light">@Html.DisplayFor(model => model.Url)</td>
					</tr>
					<tr>
						<td class="bg-light"> @Html.DisplayNameFor(model => model.UpdatedAt)</td>
						<td class="bg-light"> @Html.DisplayFor(model => model.UpdatedAt)</td>
					</tr>
					
				</table>
			</div>
		</div>
	</section>
</div>