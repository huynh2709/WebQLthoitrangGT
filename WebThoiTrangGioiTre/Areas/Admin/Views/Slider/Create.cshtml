@model MyClass.Models.Slider

@{
	ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<div class="content-wrapper">
		<section class="content my-2">
			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col-md-6">
							<strong class="text-danger">THÊM SLIDER</strong>
						</div>
						<div class="col-md-6 text-right">
							<button class="btn btn-sm btn-outline-success" type="submit" name="create"><i class="fas fa-save"></i>  Thêm mới</button>
							<a href="@Url.Action("Index","Slider")" class="btn btn-sm btn-outline-info"><i class="fas fa-long-arrow-alt-left"></i>  Về danh sách</a>
						</div>
					</div>
				</div>
				<div class="card-body col-md-12">
					<div class="row">
						<div class="col-md-9">
							<div class="form-group">
								<label>Tên slider</label>
								<div class="col-md-10">
									@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label>Hình ảnh <span class="text-danger">(*)</span></label>
									<input name="img" type="file" class="form-control" />
								</div>
							</div>
						</div>

					</div>
				</div>
		</section>
	</div>
}

