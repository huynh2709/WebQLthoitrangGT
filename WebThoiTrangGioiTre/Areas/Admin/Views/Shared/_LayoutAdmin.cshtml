<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<link href="~/Public/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
	<link href="~/Public/dist/css/adminlte.min.css" rel="stylesheet" />
	

	<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
	<link href="~/Public/tableAdmin/css/styles.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>


	@RenderSection("header", required: false)
</head>
<body class="hold-transition sidebar-mini">

	<div class="wrapper">

		<nav class="main-header navbar navbar-expand navbar-white navbar-light">

			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
	
			</ul>

			<ul class="navbar-nav ml-auto">
				<div class="header__top__links">
					<i class="fa fa-solid fa-user"></i>
					<a href="~/dang-xuat">Đăng xuất</a>
				</div>
			</ul>
		</nav>

		<aside class="main-sidebar sidebar-dark-primary elevation-4">


			<div class="sidebar">

				<div class="user-panel mt-3 pb-3 mb-3 d-flex">
					<div class="info">
						<p class="text-white">QUẢN LÝ SHOP THỜI TRANG <br />GIỚI TRẺ</p>
					</div>
				</div>


				<div class="form-inline">
					<div class="input-group" data-widget="sidebar-search">
						<input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
						<div class="input-group-append">
							<button class="btn btn-sidebar">
								<i class="fas fa-search fa-fw"></i>
							</button>
						</div>
					</div>
				</div>


				<nav class="mt-2">
					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

						<li class="nav-item">
							<a href="#" class="nav-link">
								
								<p>
									Sản Phẩm
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a href="@Url.Action("Index","ProductCategory")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Danh mục sản phẩm</p>
									</a>
								</li>
								<li class="nav-item">
									<a href="@Url.Action("Index","Product")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Danh sách sản phẩm</p>
									</a>
								</li>
							</ul>
						</li>
					</ul>

					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a href="#" class="nav-link">
								
								<p>
									Tin Tức
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a href="@Url.Action("Index","NewsCategory")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Danh mục tin tức</p>
									</a>
								</li>
								<li class="nav-item">
									<a href="@Url.Action("Index","News")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>DS tin tức</p>
									</a>
								</li>
								<li class="nav-item">
									<a href="@Url.Action("Index","Page")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Trang đơn</p>
									</a>
								</li>
							</ul>
						</li>
					</ul>

					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a href="@Url.Action("Index","Order")" class="nav-link">
								
								<p>
									Quản lý đơn hàng
								</p>
							</a>
						</li>
					</ul>

					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a href="#" class="nav-link">
								
								<p>
									Giao diện
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a href="@Url.Action("Index","Menu")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Menu</p>
									</a>
								</li>
								<li class="nav-item">
									<a href="@Url.Action("Index","Slider")" class="nav-link">
										<i class="far fa-circle nav-icon"></i>
										<p>Slider</p>
									</a>
								</li>
							</ul>
						</li>
					</ul>
				</nav>

			</div>

		</aside>

		@RenderBody()

	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/Public/tableAdmin/assets/demo/datatables-demo.js"></script>
	<script src="~/Public/tableAdmin/js/datatables-simple-demo.js"></script>
	<script src="~/Public/tableAdmin/js/scripts.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
	<script src="~/Public/tableAdmin/assets/demo/chart-area-demo.js"></script>
	<script src="~/Public/tableAdmin/assets/demo/chart-bar-demo.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>

	<script src="~/Public/js/ckeditor/ckeditor.js"></script>


	<script src="~/Public/plugins/jquery/jquery.min.js"></script>
	<script src="~/Public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/Public/dist/js/adminlte.min.js"></script>
	@RenderSection("footer", required: false)
</body>
</html>
