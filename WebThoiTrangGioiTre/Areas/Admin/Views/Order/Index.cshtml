@model IEnumerable<MyClass.Models.Order>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper"  id="layoutSidenav_content">
	<!-- Main content -->
	<section class="content my-2">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-md-6">
						<strong class="text-danger">QUẢN LÝ ĐƠN HÀNG</strong>
					</div>
					<!--<div class="col-md-6 text-right">
		<a href="Url.Action("Create","Order")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Thêm mới</a>
	</div>-->
				</div>
			</div>
			<div class="card-body">
				<table class="table table-bordered table-striped" id="datatablesSimple">
					<tr>
						<th>ID</th>
						<th>
							@Html.DisplayNameFor(model => model.NameCustomer)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Email)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Phone)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Address)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CreatedAt)
						</th>
						
						<th></th>
					</tr>


					@foreach (var item in Model)
					{
				<tr>
					<td>@item.Id</td>
					<td>
						@Html.DisplayFor(modelItem => item.NameCustomer)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Phone)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Address)
					</td>
					
					<td>
						@Html.DisplayFor(modelItem => item.CreatedAt)
					</td>

					<td>
						<a href="@Url.Action("Details","Order", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
						<a href="@Url.Action("Delete","Order", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
					</td>
				</tr>
					}

				</table>
			</div>
		</div>
		<!-- /.card -->

	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
