@model MyClass.Models.News

@{
	ViewBag.Title = Model.Name;
	Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Blog Details Hero Begin -->
<section class="blog-hero spad">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-9 text-center">
				<div class="blog__hero__text">
					<h2>@Model.Name</h2>
					<ul>
						<li>Người tạo: Bùi Như Huỳnh</li>
						<li>@Model.CreatedAt</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Blog Details Section Begin -->
<section class="blog-details spad">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-12">
				<div class="blog__details__pic">
					<img src="~/Public/images/blog/@Model.Image" width="300px" height="500px" alt="">
				</div>
			</div>
			<div class="col-lg-8"  style=" border: 1px solid; padding: 10px; box-shadow: 5px 5px 5px #808080;">
				<div class="blog__details__content">
					<div class="blog__details__text text-center">
						
							@Html.Raw(Model.Content)
						
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<h3 class="related-title">Tin liên quan</h3>
			</div>
			@foreach (var item in ViewBag.ListOther)
			{

				<div class="col-lg-4 col-md-6 col-sm-6"  style=" border: 1px solid; padding: 10px; box-shadow: 5px 5px 5px #808080;">
					<div class="blog__item">
						<div class="blog__item__pic set-bg" data-setbg="/Public/images/blog/@item.Image">
							
						</div>
						<div class="blog__item__text">
							<span><img src="img/icon/calendar.png" alt="">@item.CreatedAt</span>
							<h5>@item.Name</h5>
							<a href="@Url.Action("NDetail","Home", new { Id = item.Id })">Read More</a>
						</div>
					</div>
				</div>

			}
		</div>
	</div>
</section>
