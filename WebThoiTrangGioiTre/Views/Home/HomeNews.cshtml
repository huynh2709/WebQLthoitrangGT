@model IEnumerable<MyClass.Models.News>
@{
	var newcate = ViewBag.NewsCategory;
}

@if (Model.Count() != 0)
{
	<div class="row">
		<div class="col-lg-12">
			<ul class="filter__controls">
				<li class="active text-uppercase" data-filter="*">@newcate.Name</li>
				<a class="float-end position-absolute end-0" href="~/@newcate.Slug">Xem tất cả</a>
			</ul>
		</div>
	</div>
	<!-- Blog Section Begin -->
	<section class="blog spad"  style=" border: 1px solid; padding: 10px; box-shadow: 5px 5px 5px #808080;">
		<div class="container">
			<div class="row" >
				@foreach (var news in Model)
				{
					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="blog__item">
							<div class="blog__item__pic set-bg" data-setbg="Public/images/blog/@news.Image"></div>
							<div class="blog__item__text">
								<span><img src="img/icon/calendar.png" alt="">@news.CreatedAt</span>
								<h5>@news.Name</h5>
								<a href="@Url.Action("NDetail","Home", new { Id = news.Id })">Read More</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</section>
	<!-- Blog Section End -->
}
