
@model MyClass.Models.Product
@{
	ViewBag.Title = "PrDetail";
	Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Shop Details Section Begin -->
<section class="shop-details">

	<div class="row">
		<div class="col-lg-6">
			<ul class="nav nav-tabs" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
						<div class="product__thumb__pic set-bg ">
							<img src="~/Public/images/products/@Model.Image" />
						</div>
					</a>
				</li>
			</ul>
		</div>
		<div class="col-lg-6" >
			<div class="product__details__content">
				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="col-lg-8">
							<div class="product__details__text">
								<h4>@Model.Name</h4>

                                <h3>@Decimal.Round(Model.Sale).ToString() VND <span class="text-danger">@Decimal.Round(Model.Price).ToString() VND</span></h3>
								<p>
									@Model.ShortDescription
								</p>
								<div class="product__details__option">
									<div class="product__details__option__size">
										<span>Size:</span>
										<label for="xxl">
											@Model.Size 
										</label>
									</div>
									<div class="product__details__option__size">
										<span>Color:</span>
										<label for="xxl">
											@Model.Color
										</label>
									</div>

								</div>
								<div class="product__details__cart__option">
									<div class="quantity">
										<div class="pro-qty">
											<input type="text" value="1">
										</div>
									</div>
									<a href="@Url.Action("ThemVaoGio", "GioHang", new { SanPhamID = Url.RequestContext.RouteData.Values["id"] })" class="primary-btn">add to cart</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="product__details__tab">
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" data-toggle="tab" href="#tabs-5"
						   role="tab">Description</a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane active" id="tabs-5" role="tabpanel">
						<div class="product__details__tab__content">
							<div class="row">
								<div class="col-md-2"></div>
								<div class="col-md-8"  style=" border: 1px solid; padding: 10px; box-shadow: 5px 5px 5px #808080;">
									@Html.Raw(Model.Description)
								</div>
								<div class="col-md-2"></div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
	<br />
	<hr />
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h3 class="related-title">Sản phẩm liên quan</h3>
			</div>
			@foreach (var product in ViewBag.ListOther)
			{

				<div class="col-lg-3 col-md-6 col-sm-6"  style=" border: 1px solid; padding: 10px; box-shadow: 5px 5px 5px #808080;">
					<div class="product__item">
						<div class="product__item__pic set-bg">
							<img src="~/Public/images/products/@product.Image" />
							<span class="label">@product.TypeProduct</span>
							<ul class="product__hover">
								<li><a href="@Url.Action("PrDetail","Home", new { Id = product.Id })"><img src="~/Public/images/icon/search.png" alt=""></a></li>
							</ul>
						</div>
						<div class="product__item__text">
							<h6>@product.Name</h6>
							<a href="@Url.Action("ThemVaoGio", "GioHang", new { SanPhamID = Url.RequestContext.RouteData.Values["id"] })"
							   class="add-cart add-to-cart">+ Add To Cart</a>

							<strong class="text-dark">@string.Format("{0:0,0}", product.Sale) VND</strong>
							<del><span class=" text-danger">@string.Format("{0:0,0}", product.Price)  VND</span></del>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>
<br />
<!-- Related Section End -->


