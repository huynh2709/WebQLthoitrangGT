@model MyClass.Models.User
@{
	ViewBag.Title = "Đăng nhập";
	Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="row justify-content-md-center">
	<div class="col-md-4">
		<div class="card">
			<div class="card-header bg-danger text-center">
				<b>Đăng nhập</b>
			</div>
			<div class="card-body">
				@using (Html.BeginForm("Login", "Customer", FormMethod.Post))
				{
					@Html.AntiForgeryToken()
					<div class="form-group">
						@Html.LabelFor(m => m.Email)
						@Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Password)
						@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
					</div>
					@*if (ViewBag.failed != null && ViewBag.failed)
					{
						<span class="text-danger">Đăng nhập thất bại. Tài khoản hoặc mật khẩu không chính xác.</span>
					}*@
					<br />
					<div class="form-group text-center">
						<input type="submit" name="submit" class="btn btn-sm btn btn-danger" value="Đăng nhập" />
					</div>
				}
			</div>
		</div>
	</div>
</div>
<br />

